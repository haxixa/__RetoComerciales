<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_envioDelegaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/txt_envioDelegaciones"
            app:layout_constraintEnd_toEndOf="@+id/img_envioDelegaciones"
            app:layout_constraintStart_toStartOf="@+id/img_envioDelegaciones"
            app:layout_constraintTop_toBottomOf="@id/img_envioDelegaciones" />

        <TextView
            android:id="@+id/txt_gestionPartners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/txt_gestionPartners"
            app:layout_constraintEnd_toEndOf="@id/img_gestionPartners"
            app:layout_constraintStart_toStartOf="@id/img_gestionPartners"
            app:layout_constraintTop_toBottomOf="@id/img_gestionPartners" />

        <TextView
            android:id="@+id/txt_gestionPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/txt_gestionPedido"
            app:layout_constraintEnd_toEndOf="@+id/img_gestionPedidos"
            app:layout_constraintStart_toStartOf="@+id/img_gestionPedidos"
            app:layout_constraintTop_toBottomOf="@+id/img_gestionPedidos" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.124" />

        <ImageButton
            android:id="@+id/img_gestionPedidos"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="40dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pedidos" />

        <ImageButton
            android:id="@+id/img_envioDelegaciones"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="@+id/img_gestionPedidos"
            app:layout_constraintTop_toTopOf="@+id/img_gestionPartners"
            app:srcCompat="@drawable/delegaciones" />

        <ImageButton
            android:id="@+id/img_gestionPartners"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/img_calendario"
            app:layout_constraintStart_toStartOf="@+id/img_calendario"
            app:layout_constraintTop_toBottomOf="@+id/img_calendario"
            app:srcCompat="@drawable/partners" />

        <ImageButton
            android:id="@+id/img_calendario"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/img_gestionPedidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_gestionPedidos"
            app:srcCompat="@drawable/calendario" />

        <TextView
            android:id="@+id/txt_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/txt_calendario"
            app:layout_constraintEnd_toEndOf="@+id/img_calendario"
            app:layout_constraintStart_toStartOf="@+id/img_calendario"
            app:layout_constraintTop_toBottomOf="@+id/img_calendario" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>